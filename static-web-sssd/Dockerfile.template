{%- import 'macros.jinja2' as macros -%}
# Toolforge lighttpd based Static File Server
# Name: docker-registry.tools.wmflabs.org/toolforge-static-web
FROM {{registry}}/{{image_prefix}}-jessie-sssd:{{tag}}

{{ macros.apt_install(
    [
        "lighttpd",
        "toollabs-webservice",
    ]
) }}

# This is where lighttpd puts its config files.
# Very unideal, but let's stick to same places as
# the gridengine for right now
RUN mkdir /var/run/lighttpd/ && chmod 0777 /var/run/lighttpd/
