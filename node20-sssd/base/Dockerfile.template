{%- import 'macros.jinja2' as macros -%}
# Toolforge NodeJS 20 runtime image
# Name: docker-registry.svc.toolforge.org/toolforge-node20-sssd-base
FROM {{registry}}/{{image_prefix}}-trixie-sssd:{{tag}}

# Includes *-dev packages needed for installing popular packages.
# Each needs a ticket filed under T140110 and tracking here:
# * T169338: libicu-dev
{{ macros.apt_install(
    [
        "build-essential",
        "libicu-dev",
        "nodejs",
        "npm",
        "yarnpkg",
    ]
) }}

RUN ln -s /usr/bin/yarnpkg /usr/bin/yarn
