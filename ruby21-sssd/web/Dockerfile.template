# Toolforge Ruby webserver image
# Name: docker-registry.tools.wmflabs.org/toolforge-ruby21-sssd-web
FROM {registry}/{image_prefix}-ruby21-sssd-base:{tag}

RUN apt-get update \
    && DEBIAN_FRONTEND=noninteractive \
    apt-get install --yes \
    toollabs-webservice \
    unicorn \
    && apt-get clean \
    && rm -rf /var/lib/apt/lists/*
