# Toollabs tcl runtime image
# Name: docker-registry.tools.wmflabs.org/toollabs-tcl
FROM {registry}/{image_prefix}-base

# Bugs T58995
RUN apt-get update \
    && DEBIAN_FRONTEND=noninteractive \
    apt-get install --yes \
    mysqltcl \
    tcl \
    tcl-thread \
    tcl-tls \
    tcl-trf \
    tclcurl \
    tcllib \
    tdom \
    && apt-get clean \
    && rm -rf /var/lib/apt/lists/*
